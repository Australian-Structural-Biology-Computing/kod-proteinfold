batch_connect:
    template: "basic"
    conn_params:
        - run_dir
        - user

script:
    native:
        - "-A kod_proteinfold"
        - "-l select=1:ncpus=2:mem=2gb"
        - "-l walltime=48:00:00"
        - "-N <%= (run_name || 'ood_proteinfold').gsub(' ', '_') %>"
    email:
        - "<%= ENV['USER'] %>@ad.unsw.edu.au"
    email_on_terminated: "<%= email_on_terminated %>"
